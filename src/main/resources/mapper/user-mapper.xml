<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wt.shiro.mapper.UserMapper">
    <resultMap type="com.wt.shiro.entity.User" id="userMap">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="salt" property="salt" jdbcType="VARCHAR"/>
        <result column="status" property="statusEnum" jdbcType="TINYINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
        <result column="note" property="note" jdbcType="VARCHAR"/>
    </resultMap>
    
    <insert id="addUser" parameterType="com.wt.shiro.entity.User">
        INSERT INTO USER VALUES (
          #{id},
          #{name},
          #{username},
          #{password},
          #{salt},
          #{statusEnum, jdbcType=TINYINT},
          #{gmtCreate, jdbcType=TIMESTAMP},
          #{gmtModified, jdbcType=TIMESTAMP},
          #{note}
        )
    </insert>

    <select id="findByUsername" parameterType="java.lang.String" resultMap="userMap">
        SELECT * FROM USER WHERE username = #{username, jdbcType=VARCHAR}
    </select>

</mapper>
